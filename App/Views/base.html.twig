<!DOCTYPE html>
<html lang="en">
    <head>

        <!-- Global site tag (gtag.js) - Google Analytics -->
        <script async src="https://www.googletagmanager.com/gtag/js?id=UA-124807274-1"></script>
        <script>
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());
            gtag('config', 'UA-124807274-1');
        </script>

        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %}</title>
        {#<link href="https://fonts.googleapis.com/css?family=Luckiest+Guy" rel="stylesheet">#}
        <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.1/css/all.css" integrity="sha384-O8whS3fhG2OnA5Kas0Y9l3cfpmYjapjI0E4theH4iuMD+pLhbf6JI0jIMfYcK3yZ" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-rc.2/css/materialize.min.css">
        <link rel="stylesheet" href="/assets/css/style.css">
    </head>
    <body>

        <!-- NAVIGATION -->
        <nav class="nav-extended indigo darken-4 {% block nav_class %}{% endblock %} ">
            <div class="container">
                <div class="nav-wrapper">
                    <a href="/" class="brand-logo">
                        <img class="circlejump-logo" src="/assets/images/circlejump.png" alt="CircleJump">
                    </a>
                    <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
                    <ul id="nav-mobile" class="right hide-on-med-and-down">
                        {% if current_user %}
                            <li><a href="/game/play">Play</a></li>
                            <li><a href="/editor">Map Editor</a></li>
                            <li><a href="/login/destroy">Logout</a></li>
                        {% else %}
                            <li><a href="/signup">Sign up</a></li>
                            <li><a href="/login">Login</a></li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>

        <ul class="sidenav" id="mobile-demo">
            <li><a href="/signup">Sign Up</a></li>
            <li><a href="/login">Login</a></li>
        </ul>
        <!-- END-NAVIGATION -->

        <!-- BODY -->
        {% block body %}
        {% endblock %}
        <!-- END-BODY -->


        <!-- jQuery -->
        <script
                src="https://code.jquery.com/jquery-3.3.1.min.js"
                integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
                crossorigin="anonymous">
        </script>
        <!-- jQuery validate -->
        <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.17.0/dist/jquery.validate.min.js"> </script>
        <!-- MaterializeCSS -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-rc.2/js/materialize.min.js"></script>
        <!-- Init all vendor components -->
        <script src="/assets/js/base/init.js"></script>
        <script src="/assets/js/fpsmeter.min.js"></script>

        <!-- Template based scripts -->
        {% block scripts %}
        {% endblock %}

    </body>
</html>