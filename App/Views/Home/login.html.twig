{% extends "base.html.twig" %}
{% block title %} Circle Jump - Login {% endblock %}
{% block body %}

    <div class="row login">
        <div class="col s12 m4 offset-m4">
            <div class="card">
                <div class="card-action deep-purple accent-3 white-text center">
                    <h3>Login</h3>
                </div>
                <div class="card-content">
                    <div class="form-field">
                        <label class="flow-text" for="username">Username</label>
                        <input id="username" type="text" placeholder="Username">
                    </div>
                    <div class="form-field">
                        <label class="flow-text" for="password">Password</label>
                        <input id="password" type="password" placeholder="Password">
                    </div>
                    <div class="form-field">
                        <label>
                            <input type="checkbox" />
                            <span class="remember-me">Remember me</span>
                        </label>
                    </div>
                    <div class="form-field">
                        <button class="btn-large waves-effect waves-dark deep-purple accent-3">Login</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}