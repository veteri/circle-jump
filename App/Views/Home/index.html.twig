{% extends "base.html.twig" %}
{% block title %} Circle Jump - Home {% endblock %}
{% block body %}

    <!-- SLIDER -->
    <section class="slider">
        <ul class="slides">
            {% if current_user %}
                <li>
                    <img src="/assets/images/landing-slider/blue_nebula.png">
                    <div class="caption center-align">
                        <h3>Welcome back <span class="purple-text text-lighten-1">{{ current_user.name }}</span> :)</h3>
                    </div>
                </li>
            {% endif %}
            <li>
                <img src="/assets/images/landing-slider/parallax03_preview-01.png">
                <div class="caption center-align">
                    <h3>A movement focused platformer.</h3>
                    <h5 class="light grey-text text-lighten-3 hide-on-small-only">
                        Master a unique movement system.
                    </h5>
                </div>
            </li>
            <li>
                <img src="/assets/images/landing-slider/game_background_3.1.png">
                <div class="caption left-align">
                    <h3>Leaderboards</h3>
                    <h5 class="light grey-text text-lighten-3 hide-on-small-only">
                        Compete with others for rank 1.
                    </h5>
                </div>
            </li>
            <li>
                <img src="/assets/images/landing-slider/snowy01_preview-01.png">
                <div class="caption right-align">
                    <h3>Level Editor</h3>
                    <h5 class="light grey-text text-lighten-3 hide-on-small-only">
                        Create your own maps and share them.
                    </h5>
                </div>
            </li>
            <li>
                <img src="/assets/images/landing-slider/preview-01.png">
                <div class="caption center-align">
                    <h3>{{ mapCount }} Maps released so far.</h3>
                    <h5 class="light grey-text text-lighten-3 hide-on-small-only">
                        Choose from a wide variety of maps.
                    </h5>
                </div>
            </li>
        </ul>

        {% for message in flash_messages %}
            <div class="alert alert-{{ message.type }}">
                {{ message.content }}
            </div>
        {% endfor %}

        <div class="play">
            <a href="/game/play" class="btn waves-effect waves-light orange darken-1">
                <i class="material-icons left">directions_run</i>
                Play
            </a>
        </div>
    </section>
    <!-- END-SLIDER -->

    <!-- FEATURES -->
    <section class="features section section-icons grey lighten-2 center">
            <div class="row">
                <div class="col s12 m4">
                    <div class="card-panel grey lighten-3 grey-text text-darken-3">
                        <i class="fas fa-trophy medium indigo-text text-darken-4"></i>
                        <h4>Leaderboards</h4>
                        <p>Measure your skill by finishing maps as fast as possible racing against everyone else.</p>
                    </div>
                </div>
                <div class="col s12 m4">
                    <div class="card-panel grey lighten-3 grey-text text-darken-3">
                        <i class="fas fa-user-edit medium indigo-text text-darken-4"></i>
                        <h4>Level Editor</h4>
                        <p>Create your own maps and share them with everyone else. They will also appear in the leaderboards.</p>
                    </div>
                </div>
                <div class="col s12 m4">
                    <div class="card-panel grey lighten-3 grey-text text-darken-3">
                        <i class="fas fa-check medium indigo-text text-darken-4"></i>
                        <h4>{{ mapCount }} Maps</h4>
                        <p>Contains 5 Maps to play by default, but also {{ mapCount - 5 }} maps created by the community.</p>
                    </div>
                </div>
            </div>
    </section>
    <!-- END-FEATURES -->


    <footer class="page-footer indigo darken-4 ">
        <div class="container">
            <div class="row">
                <div class="col l6 s12">
                    <h5 class="white-text"></h5>
                    <p class="grey-text text-lighten-4">All images and music are licensed. </p>
                    <p class="grey-text text-lighten-4">Distribution is strictly prohibited. </p>
                </div>
                <div class="col l4 offset-l2 s12">
                    <h5 class="white-text">Important Links</h5>
                    <ul>
                        <li><a class="grey-text text-lighten-3" href="/terms-of-use">Terms of Use</a></li>
                        <li><a class="grey-text text-lighten-3" href="/privacy-policy">Privacy Policy</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="footer-copyright">
            <div class="container">
                Â© 2018 circle jump
            </div>
        </div>
    </footer>
    <!-- END-FOOTER -->


{% endblock %}




