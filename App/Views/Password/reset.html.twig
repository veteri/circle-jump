{% extends "base.html.twig" %}
{% block title %} Reset password {% endblock %}
{% block body %}


    <div class="row signup">
        <div class="col s12 m8 offset-m2 l4 offset-l4">
            <div class="card z-depth-2">
                <div class="card-action indigo darken-4 center white-text">
                    <h3>Reset password</h3>
                </div>
                <div class="card-content">
                    <form method="post" action="/password/reset-password" id="formPasswordReset">

                        <input type="hidden" name="token" value="{{ token }}">

                        {% if user.errors is not empty %}
                            <div class="error card-panel red darken-2">
                                <p class="header">Please consider: </p>
                                <ul class="browser-default">
                                    {% for error in user.errors %}
                                        <li>{{ error }}</li>
                                    {% endfor %}
                                </ul>
                            </div>
                        {% endif %}

                        <div class="input-field">
                            <i class="material-icons prefix">lock</i>
                            <label for="password">Password</label>
                            <input id="password" name="password" type="password" required>
                        </div>
                        <div class="input-field">
                            <i class="material-icons prefix">loop</i>
                            <label for="password_confirmation">Confirm password</label>
                            <input type="password" name="password_confirmation" id="password_confirmation" required>
                        </div>
                        <div class="input-field">
                            <button type="submit" class="btn-large indigo darken-4 waves-effect waves-light">Reset password</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block scripts %}
    <script src="/assets/js/password-reset/reset.js"></script>
{% endblock %}