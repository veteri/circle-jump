{% extends "base.html.twig" %}
{% block title %} Circle Jump - Login {% endblock %}
{% block body %}

    <div class="row login">
        <div class="col s12 m8 offset-m2 l4 offset-l4">
            <div class="card">
                <div class="card-action indigo darken-4 white-text center">
                    <h3>Login</h3>
                </div>
                <div class="card-content">

                    {% for message in flash_messages %}
                        <div class="card-panel alert alert-{{ message.type }}">
                            {{ message.content }}
                        </div>
                    {% endfor %}

                    <form method="post" action="/login/perform" id="formLogin">
                        <div class="input-field">
                            <label class="flow-text" for="email">E-Mail</label>
                            <input id="email" name="email" type="text" autofocus value="{{ email }}">
                        </div>
                        <div class="input-field">
                            <label class="flow-text" for="password">Password</label>
                            <input id="password" name="password" type="password">
                        </div>
                        <div>
                            <label>
                                <input type="checkbox" name="remember_me" {% if remember_me %} checked {% endif %} />
                                <span class="remember-me">Remember me</span>
                            </label>
                        </div>
                        <div class="input-field">
                            <button type="submit" class="btn-large waves-effect waves-light indigo darken-4">Log in</button>
                        </div>
                    </form>
                    <div>
                        <p>
                            <a href="/password/forgot">Forgot password?</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}